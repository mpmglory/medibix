{% extends 'base.html.twig' %}

{% block body %}
    <h1>Hematologie</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ hematologie.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if hematologie.date %}{{ hematologie.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Globulesblancs</th>
                <td>{{ hematologie.globulesBlancs }}</td>
            </tr>
            <tr>
                <th>Globulesrouges</th>
                <td>{{ hematologie.globulesRouges }}</td>
            </tr>
            <tr>
                <th>Tauxhemoglobine</th>
                <td>{{ hematologie.tauxHemoglobine }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ hematologie.price }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('hematologie_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('hematologie_edit', { 'id': hematologie.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
